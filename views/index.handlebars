<div class="row" id="top">


  <div class="col-md-12">
    <img src="/assets/images/PLACEHOLDER TEXT" alt="Burger" height=160>
    <h1>Burger Town!</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6" id="not-devoured">
    <h2 class="burgList">Burgers Available!</h2>

    <ul class="burgList">
      {{#each burgers}}
        {{#unless devoured}}
          <li>
            <p><span class="label">{{this.id}}: </span>{{this.burger_name}}</p>

            <button data-id="{{this.id}}" class="devour">Devour It!</button>
          </li>
        {{/unless}}
        
      {{/each}}
    </ul>
  </div> 

  <div class="col-md-6" id="devoured">
    <h2 class="dev">Burgers that have been devoured!</h2>

    <ul class="dev">
      {{#each burgers}}
        {{#if devoured}}
          <li>
            <p><span class="label">{{this.id}}: </span>{{this.burger_name}}</p>

          </li>
        {{/if}}
        
      {{/each}}
    </ul>
  </div>
<div class="row">
    <div class="col-md-12" id="add-burger">
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger_name">Burger Name:</label>
          <input type="text" id="burger_name" name="name">
        </div>

        {{!-- <div class="form-group">
          <label for="devour">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Available to Devour!
        </div> --}}

        <button type="submit">Add burger</button>
      </form>
    </div>
  </div>
</div>